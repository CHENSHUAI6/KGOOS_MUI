<UserControl x:Class="KGOOS_MUI.Pages.Web.WenManage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*" />
            <ColumnDefinition  Width="*" />
            <ColumnDefinition  Width="*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" Grid.Row="0">
            <TextBlock Name="NewSPut" Text="新闻发布" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontFamily="微软雅黑" MouseDown="NewSPut_MouseDown"/>
        </ScrollViewer>
        <ScrollViewer Grid.Column="1" Grid.Row="0">
            <TextBlock Name="Entering" Text="包裹登记" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontFamily="微软雅黑" MouseDown="Entering_MouseDown" />
        </ScrollViewer>
        <ScrollViewer Grid.Column="2" Grid.Row="0">
            <TextBlock Name="Select" Text="包裹查询" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" FontFamily="微软雅黑" MouseDown="Select_MouseDown" />
        </ScrollViewer>
    </Grid>
</UserControl>
